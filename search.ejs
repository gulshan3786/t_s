<html>
    <head>
        <style>
            table,th,tr{
                border: 1px solid black;
            }
            th{
                background-color: rgb(219, 231, 177);
            }
            tr{
                background-color: darkgray;
            }
        </style>
    </head>
    <body>
       
          
        
      
        <center>
        <table>
            <thead>
                <tr>
                    <th rowspan="2">Student Id</th>
                    <th rowspan="2">Student Name</th>
                    <th colspan="2">Prelim Exam</th>
                    <th colspan="2">Terminal Exam</th>
                    <th colspan="2">Final Exam</th>
                    <th rowspan="2">Totak Marks</th>
                    <th rowspan="2"> Report</th>
                </tr>
                <tr>
                    <th colspan="1">Theory Marks</th>
                    <th colspan="1">Practical Marks</th>
                    <th colspan="1">Theory Marks</th>
                    <th colspan="1">Practical Marks</th>
                    <th colspan="1">Theory Marks</th>
                    <th colspan="1">Practical Marks</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0;i<result.length;i+=3){%>
                <tr>
                    <td><%=result[i].studentid%></td>
                    <td><%=result[i].firstname%></td>
                    <% let total=0; %>
                  <% for(let j=i;j<i+3;j++){%>
                    <td><%=result[j].theorymarks_obt%></td>
                     <td><%=result[j].practicalmarks_obt%></td>
                     <%total=total+parseInt(result[j].theorymarks_obt)+parseInt(result[j].practicalmarks_obt)%>
                  <%}%>
                  <td><%=total%></td>
                    <td><a href="/report?key=<%=result[i].studentid%>">View report</a></td>
                </tr>
                <%} %>
                
               
            </tbody>
        </table>
    </center>
    </body>
</html>